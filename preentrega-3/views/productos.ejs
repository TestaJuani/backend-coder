<!DOCTYPE html>
<html>
  <head>
    <title> title </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
     <!-- CSS -->
     <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include ("partials/nav.ejs") %> 
    <section>
      <h2 class="text-center">NUESTROS PRODUCTOS</h2>
    </section>
    <section class="section-productos">
      <% productos.forEach(el => { %>
        <form method="post" action="/api/carrito" class="card-productos">
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="<%=el.nombre%>" readonly onmousedown="return false;">
          </div>
          <div class="mb-3">
            <label for="marca" class="form-label">Marca</label>
            <input type="text" class="form-control" id="marca" name="marca" value="<%=el.marca%>"readonly onmousedown="return false;">
          </div>
          <div class="mb-3">
            <label for="descripcion" class="form-label">Descripcion</label>
            <input type="text" class="form-control" id="descripcion" name="descripcion" value="<%=el.descripcion%>" readonly onmousedown="return false;">
          </div>
          <div class="mb-3">
            <label for="precio" class="form-label">Precio</label>
            <input type="text" class="form-control" id="precio" name="precio" value="<%=el.precio%>" readonly onmousedown="return false;">
          </div>
          <div class="mb-3">
            <input type="submit" class="form-control" value="Enviar al carrito">
          </div>
        </form>
      <% }) %>
    </section>
  </body>
</html>