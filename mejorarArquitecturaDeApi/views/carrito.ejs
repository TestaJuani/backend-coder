<!DOCTYPE html>
<html>
  <head>
    <title> title </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
     <!-- CSS -->
     <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include ("partials/nav.ejs") %> 
    <section class="section-carrito">
      <div class="div-datos-pedido">
        <% carritos.forEach(el => { %>
          <div class="pedidos">
            <p><%= el.nombre %> </p>
            <p><%= el.marca %> </p>
            <p><%= el.descripcion %> </p>
            <p><%= el.precio %> </p>
            <form method="post" action="/api/carrito/<%= el._id %>?_method=DELETE" >
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn btn-outline-ligth w-100">Eliminar</button>
            </form>
          </div>
        <% }) %>
        </div>
        <div class="div-datos-usuario">
          <h2>MIS DATOS</h2>
          <% if (user) { %>
            <p>Nombre: <%= user.nombre %></p> 
            <p>Direccion: <%= user.direccion %> </p>
            <p>Edad: <%= user.edad %> </p>
            <p>Telefono: <%= user.telefono %> </p>
            <p>Email: <%= user.email %>  </p>
          <% } %>
          <button>FINALIZAR COMPRA</button>
        </div>
    </section>
  </body>
</html>